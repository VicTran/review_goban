<div class="panel-body">
  <%= search_form_for @search, url: advance_searchs_path do |f| %>
    <div class="row">
      <div class="large-5 small-4 col-sm-3">
        <%= f.label :name_cont, t("search.product.name") %>
        <%= f.text_field :name_cont, class: "form-control",
          placeholder: t("search.product.name") %>
      </div>
      <div class="large-5 small-4 col-sm-3">
        <%= f.label :price_gteq, t("search.product.from_price") %>
        <%= f.number_field :price_gteq, class: "form-control", min: 1000, step: 1000  %>
        <%= f.label :price_lteq, t("search.product.to_price") %>
        <%= f.number_field :price_lteq, class: "form-control", min: 1000, step: 1000 %>
      </div>
      <div class="large-5 small-4 col-sm-3 center">
        <%= f.label :promotion_gteq, t("search.product.from_promotion")%>
        <%= f.number_field :promotion_gteq, class: "form-control",in: 0.0..100.0, step: 1 %>
        <%= f.label :promotion_lteq, t("search.product.to_promotion") %>
        <%= f.number_field :promotion_lteq, class: "form-control",in: 0.0..100.0, step: 1 %>
      </div>
      <div class="large-5 small-4 col-sm-3 center">
        <%= f.label :star_minimun, "Star From"%>
        <%= number_field_tag :star_minimun, @star_minimun ,min: 0, max: 5, step: 1, class: "form-control"%>
        <%= f.label :star_maximun, "Star To"%>
        <%= number_field_tag :star_maximun, @star_maximun ,min: 0, max: 5, step: 1, class: "form-control"%>
      </div>
    </div>
    <%= f.submit t("search.button"), class: "btn btn-success col-sm-2" %>
  <% end %>
</div>
