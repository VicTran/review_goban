<div class="input-group fields">
  <span class="input-group-addon input-group-addon-2">
    <%= link_to ff.object.product.name, product_path(ff.object.product) %>
  </span>
  <span class="input-group-addon"><%= ff.number_field :number, class: "form-control"  %></span>
  <span class="input-group-addon"><%= ff.object.product.price %></span>
  <span class="input-group-addon"><%= ff.object.product.price * ff.object.number %></span>
  <%= ff.hidden_field :_destroy, value: false %>
  <span class="input-group-addon">
    <%= link_to_remove_fields t(:remove), ff %>
  </span>
</div>
