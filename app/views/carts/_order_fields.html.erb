<tr>
  <td><%= link_to ff.object.product.name, product_path(ff.object.product) %></td>
  <td><%= ff.number_field :number, class: "form-control",
    width: "100px", min: 0 %></td>
  <td><%= ff.object.product.price %></td>
  <td><%= ff.object.product.promotion %> %</td>
  <td><%= ff.object.sum_price.to_i %></td>
  <%= ff.hidden_field :_destroy, class: 'check-remove' %>
  <td><%= link_to t(:remove), '#', class: 'remove_row' %></td>
</tr>
