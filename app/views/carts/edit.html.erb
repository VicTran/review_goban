<%= javascript_include_tag 'cart' %>
<div style = "padding-top: 100px">
<%= form_for @cart do |f| %>
  <table class="table table-bordered table-striped table-condensed">
    <thead>
      <tr>
        <th class="center">Name</th>
        <th class="center">Prict</th>
        <th class="center">Total Price</th>
        <th class="center"><%= t "exam.action" %></th>
      </tr>
    </thead>
    <tbody>
      <%= f.fields_for :order_items do |order_item| %>
        <%= render "order_fields", ff: order_item %>
    <% end %>
    </tbody>
  </table>
  <hr>
      Total Price: <%= f.object.sum_price %>
    <hr>
    <div class="row">
      <div class="col-sm-4 col-md-4">
        <%= link_to new_cart_path, class: "btn btn-primary" do %>
          <%= t :back_to_cart %>
        <% end %>
      </div>
      <div class="col-sm-4 col-md-4">
        <%= f.submit "Buy", class: "btn btn-primary" %>
      </div>
    </div>
<% end %>
</div>
