<div style = "padding-top: 100px">
  <%= form_for @cart do |f| %>
    <%= f.fields_for :order_items do |ff| %>
      <div class="input-group fields">
        <span class="input-group-addon input-group-addon-2">
          <%= link_to ff.object.product.name, product_path(ff.object.product) %>
        </span>
        <span class="input-group-addon"><%= ff.number_field :number, class: "form-control", disabled: true %></span>
        <span class="input-group-addon"><%= ff.object.product.price %></span>
        <span class="input-group-addon"><%= ff.object.product.price * ff.object.number * (100- ff.object.product.promotion)/100 %></span>
      </div>
    <% end %>
    <hr>
    <div class="row">
      <div class="col-sm-4 col-md-4">
        <%= link_to root_path, class: "btn btn-primary" do %>
          <%= t :back %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
