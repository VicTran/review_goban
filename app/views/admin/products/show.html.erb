<script src="app/assets/javascripts/jquery.flexslider-min.js"></script>
<div class="row bg-white">
<div class="col-lg-12 bg-white mgTop">
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 tit-des-detail">
  <h1><%= @product.name %></h1>
  <div class="img-product-detail col-lg-5 col-md-5 col-sm-5 col-xs-12 paddingLNone" style="margin-left: 20px;">
  <section class="slider">
    <div class="flexslider">
      <ul class="slides">
        <% unless @product.product_images.nil? %>
          <% @product.product_images.each do |image| %>
            <li>
              <img src="<%= image.image%>", height= "300px"/>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </section>
  </div>
  <div id="ctl00_ContentPlaceHolder1_infoprice" class="info-product-detail col-lg-6 col-md-6 col-sm-6 col-xs-12 paddingLNone paddingRNone">
    <div class="info-price">
      <div>
        <div class="modeldetail">
          <b><%= t "product.category" %>:
          </b><%= link_to @product.category.name, category_path(@product.category)%>
        </div>
        <div class="product-info">
        <ul class="product-summary">
          <li>
            -<%= t "product.description"%>: <%= @product.description %>
          </li>
          <li>-<%= t "product.promotion"%>: <%= @product.promotion.nil? ? t("no") :
        (@product.promotion.to_s + " %") %>
          </li>
         <li>-<%= t "product.detail" %>: <%= @product.detail %>%
          </li>
        </ul>
        Ratting: <%= rating_for @product, "price", star: 5, disable_after_rate: false %>
        </div>

        <div class="func_stock">
        </div>
      </div>
      <div class="clearfix"></div>
        <div id="ctl00_ContentPlaceHolder1_pricedetail" class="price-detail">
          <div class="price-dt1">
          </div>
          <div class="price-dt2">
            <div class="">
              <small class="price3">
              <%= (1- @product.promotion.to_f/100) * @product.price %> $
              </small>
              <span class="gkm"></span>
          </div>
        </div>
        <div class="price-vat">
            Price include VAT
        </div>
      </div>
    </div>
  </div>
  <div class="comment-div">
    <div id="products-<%= @product.id %>">
  <div>
      <% if @product.comments.any? %>
        <%= t "comments" %>:
        <strong id="comment_number">
          <%= @product.comments.count %>
        </strong>
        <ol class="products">
          <div id = 'comments'>
            <% @product.comments.each do |comment| %>
            <%= render "comments/comment", comment: comment %>
            <% end %>
        </div>
         </ol>
        <%= paginate @comments %>
      <% end %>
  </div>
</div>
  </div>

</div>
</div>

<script type="text/javascript" charset="utf-8">
  $(window).load(function() {
  $('.flexslider').flexslider({
    animation: "slide"
  });
});
</script>
