<div class="row">
<div class="col-sm-2 rcorners">
  <h2>All Category</h2>
  <div style="height: 100px; overflow-y: scroll;">
    <ul>
    <% unless @catgories.nil? %>
      <% @catgories.each do |category| %>
        <li><%= link_to t(category.name), "" %></li>
      <% end %>
    <% end %>
    </ul>
  </div>
</div>

<div class="col-sm-7">
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
