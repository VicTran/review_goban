<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(:logo), root_path, id: "logo" %>
    <div id = "search_header">
      <% @products = Product.all %>
      <% @search = @products.ransack params[:q] %>
      <%= search_form_for @search, url: searchs_path, method: :get do |f| %>
        <%= f.text_field :name_cont, placeholder: "Input product's name",
          class: "form-control" %>
      <% end %>
    </div>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(:home), root_path %></li>
        <% if user_signed_in? %>
          <li>
            <%= gravatar_for current_user %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(:setting), edit_user_registration_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("user.log_out"), destroy_user_session_path,
                  method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to t("user.login"), new_user_session_path %>
          </li>
            <li>
              <%= link_to t("user.sign_up"), new_user_registration_path %>
            </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
