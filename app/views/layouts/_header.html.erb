<div class="row">
    <div class="category">
      <div id="ctl00_topbar1_colmd" class="col-lg-2 col-md-3 hidden-sm hidden-xs">
        <div class="tit-list" id="hidden-toggler">
          <ul class="">
            <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="glyphicon glyphicon-th-list"></span> <%= t "all_categories" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu list-group">
            <% @catgories = Category.all %>
              <% unless @catgories.nil? %>
                <% @catgories.each do |category| %>
                  <%= link_to category_path(category) do %>
                    <li class = "list-group-item" >
                    <% unless category.image.file.nil? %>
                      <%= image_tag category.image, height:"30", width: "30"  %>
                    <% end %>
                    <%= t(category.name) %></li>
                  <% end %>
                <% end %>
              <% end %>
            </ul>
            </li>
            </ul>
        </div>
      </div>
      <div class="col-lg-6 col-md-8 col-sm-8 col-xs-10">
        <div class="search-pro">
          <div class="input-group">
          <% @products = Product.all %>
          <% @search = @products.ransack params[:q] %>
          <%= search_form_for @search, url: searchs_path,
           method: :get do |f| %>
            <%= f.text_field :name_cont, placeholder:
              t("product.input_name"), class: "form-control" %>
          <% end %>
              <div id="search_suggest" style="z-index: 299999; visibility: hidden; position: absolute;
                        left: 0; top: 48px">
              </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
          <div class="search-pro">
            <div class="input-group">
              <%= link_to "Search Advance", advance_searchs_path, class: "btn btn-primary" %>
            </div>
          </div>
        </div>
    </div>
</div>
