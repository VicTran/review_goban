<%= form_for [@product, @comment]  do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.text_area :content, placeholder: t("input_comment"), class: "form-control" %>  <br>
  <%= f.file_field :image, class: "form-control" %>  <br>
  <%= f.submit t("comment"), class: "btn btn-primary" %>
<% end %>
